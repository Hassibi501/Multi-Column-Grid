{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "obsidian": ["node_modules/obsidian"]
    },
    "types": ["obsidian"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", ".obsidian", "dist"]
}
